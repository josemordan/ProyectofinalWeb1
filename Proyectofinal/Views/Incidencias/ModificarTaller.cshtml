@model Modelos.Incidencias.Taller

@{
    ViewBag.Title = "Editar Taller";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<br />
<div class="container animated pulse">
    <div class="row justify-content-md-center">
            <div class="col-md-4">
            <div class="card" style="border:0px">
                <div class="card-header bg-warning text-center">
                    <h5>Editar Taller</h5>
                    @Html.ActionLink("Ir a la lista", "Talleres", null, new { style = "color:White" })
                </div>
                <div class="card-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)

                        <div class="form-group" style="margin-left:10px">
                                <b>@Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })</b>
                                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group" style="margin-left:10px">
                                <b>@Html.Label("Teléfono", htmlAttributes: new { @class = "control-label" })</b>
                                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group" style="margin-left:10px">
                                <b>@Html.Label("Dirección", htmlAttributes: new { @class = "control-label" })</b>
                                @Html.TextAreaFor(model => model.Direccion, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                            </div>
                            

                        <div class="form-group" style="margin-left:10px">
                            <div class="col-md-offset-2 col-md-14">
                                <input type="submit" value="Guardar Cambios" class="btn btn-warning btn-block" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}