@model Modelos.Incidencias.Taller

@{
    ViewBag.Title = "Registrar Taller";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />

    <div class="container animated 	pulse">
        <div class="row justify-content-md-center">
            <div class="col-md-4">
                <div class="card" style="border:0px">
                    <div class="card-header bg-success text-white text-center">
                        <h5>Registrar Taller</h5>
                            @Html.ActionLink("Ir a la lista", "Talleres", null, new { style = "color:black" })
                    </div>
                    <div class="card-body">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group" style="margin-left:10px">
                                <b>@Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })</b>
                                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group" style="margin-left:10px">
                                <b>@Html.Label("Teléfono", htmlAttributes: new { @class = "control-label" })</b>
                                @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group" style="margin-left:10px">
                                <b>@Html.Label("Dirección", htmlAttributes: new { @class = "control-label" })</b>
                                @Html.TextAreaFor(model => model.Direccion, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Direccion, "", new { @class = "text-danger" })
                            </div>
                            
                            <div class="form-group"  style="margin-left:10px">
                                <div class="col-md-offset-2 col-md-14">
                                    <input type="submit" value="Registrar" class="btn btn-success btn-block" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}