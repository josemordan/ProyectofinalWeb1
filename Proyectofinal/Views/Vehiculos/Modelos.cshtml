@model IEnumerable<Modelos.Vehiculos.Modelo>

@{
    ViewBag.Title = "Listado de Modelos";
}

<br />
<div class="container animated 	pulse">
    <div class="row justify-content-md-center">
        <div class="col-md-6">
            <div class="card" style="border:0px">
                <div class="card-header bg-dark text-white text-center">
                    <h5>Listado de Modelos</h5>
                    <p>
                        @Html.ActionLink("Nuevo Modelo", "InsertarModelos")
                    </p>

                    <div class="row">
                        <div class="col-md-4 input-group">
                            <label>Buscar: </label>
                            <input id="filtro" type="text" Placeholder="buscardor" />
                        </div>
                    </div>
                </div>
                <div class="card-body">

                    <table class="table">
                        <tr>
                            <th>No.</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>Marca</th>
                            <th>
                                Opciones Adicionales
                            </th>
                        </tr>
                        <tbody id="tblss">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Marca)
                                    </td>
                                    <td>
                                        <div>

                                            <a class="text-white">@Html.ActionLink("Editar", "ModificarModelo", new { id = item.ID }, new { @class = "btn btn-warning" })</a>
                                            @* <a class="text-white">@Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })</a> *@
                                            <a class="text-white">@Html.ActionLink("Eliminar", "EliminarModelo", new { id = item.ID }, new { @class = "btn btn-danger" })</a>
                                        </div>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#filtro").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#tblss tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}