@model Modelos.Vehiculos.Vehiculo

@{
    ViewBag.Title = "Editar Vehículo";
}

@{

    var transmision = new List<SelectListItem>
{
        new SelectListItem {Text="Automatica", Value ="Automatica",Selected=true},
        new SelectListItem {Text="Mecanica", Value ="Automatica"},
        new SelectListItem {Text="Mixta", Value ="Mixta"}

    };
    var combustible = new List<SelectListItem>
{
        new SelectListItem {Text="Gasolina", Value ="Gasolina",Selected=true},
        new SelectListItem {Text="Gas Natural", Value ="Gas Natural"},
        new SelectListItem {Text="Diesel", Value ="Diesel"},
        new SelectListItem {Text="GLP", Value ="GLP"}

    };
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<br />

    <div class="container animated 	pulse">
        <div class="row justify-content-md-center">
            <div class="col-md-10">
                <div class="card" style="border:0px">
                    <div class="card-header bg-warning text-center">
                        <h5>Registrar Vehículo</h5>
                        @Html.ActionLink("Ir a la lista", "Vehiculos", null, new { style = "color:White" })
                    </div>
                    <div class="card-body">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <b>@Html.LabelFor(model => model.Chasis, htmlAttributes: new { @class = "control-label" })</b>
                                        @Html.EditorFor(model => model.Chasis, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Chasis, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <b>@Html.LabelFor(model => model.Placa, htmlAttributes: new { @class = "control-label" })</b>
                                        @Html.EditorFor(model => model.Placa, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Placa, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <b>@Html.Label("Año", htmlAttributes: new { @class = "control-label" })</b>
                                        @Html.EditorFor(model => model.Anio, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Anio, "", new { @class = "text-danger" })
                                    </div>                                    
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <b>@Html.LabelFor(model => model.Combustible, htmlAttributes: new { @class = "control-label" })</b>
                                        @Html.DropDownListFor(model => model.Combustible, combustible, new { @class = "form-control" } )
                                        @Html.ValidationMessageFor(model => model.Combustible, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <b>@Html.Label("Transmisión", htmlAttributes: new { @class = "control-label" })</b>
                                        @Html.DropDownListFor(model => model.Transmision, transmision, new { @class = "form-control" } )
                                        @Html.ValidationMessageFor(model => model.Transmision, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <b>@Html.Label("Modelo", htmlAttributes: new { @class = "control-label" })</b>
                                        <div>
                                            @{
                                                if (Model.Modelos != null)
                                                {
                                                    @Html.DropDownListFor(model => model.ModeloID, Model.Modelos.Select(s => new SelectListItem { Value = s.ID.ToString(), Text = s.Nombre.ToString() }), new { @class = "form-control" })
                                                }
                                            }
                                            @Html.ValidationMessageFor(model => model.ModeloID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <b>@Html.Label("Color", htmlAttributes: new { @class = "control-label" })</b>
                                        <div>
                                            @{
                                                if (Model.Colores != null)
                                                {
                                                    @Html.DropDownListFor(model => model.ColorID, Model.Colores.Select(s => new SelectListItem { Value = s.ID.ToString(), Text = s.Nombre.ToString() }), new { @class = "form-control" })
                                                }
                                            }
                                            @Html.ValidationMessageFor(model => model.ColorID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <b>@Html.Label("Empleado", htmlAttributes: new { @class = "control-label" })</b>
                                        <div>
                                            @{
                                                if (Model.Modelos != null)
                                                {
                                                    @Html.DropDownListFor(model => model.EmpleadoID, Model.Empleados.Select(s => new SelectListItem { Value = s.ID.ToString(), Text = s.Nombre.ToString() }), new { @class = "form-control" })
                                                }
                                            }
                                            @Html.ValidationMessageFor(model => model.EmpleadoID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <b>@Html.Label("Mantenimiento", htmlAttributes: new { @class = "control-label" })</b>
                                        @Html.EditorFor(model => model.Mantenimiento, new { htmlAttributes = new { @class = "form-control col-md-2"} })
                                        @Html.ValidationMessageFor(model => model.Mantenimiento, "", new { @class = "text-danger" })
                                    </div>                                    
                                </div>
                            </div><br/>
                            <Center>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-14">
                                        <input type="submit" value="Guardar Cambios" class="btn btn-warning btn-block" />
                                    </div>
                                </div>
                            </Center>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
