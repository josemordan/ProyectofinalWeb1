@model Modelos.Vehiculos.Color

@{
    ViewBag.Title = "Registrar Color";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <br /><br />
    <div class="container animated 	pulse">
        <div class="row justify-content-md-center">
            <div class="col-md-6">
                <div class="card" style="border:0px">
                    <div class="card-header bg-dark text-white text-center">
                        <h5>Registrar Color</h5>
                            @Html.ActionLink("Ir a la lista", "Colores")
                    </div>
                    <div class="card-body">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <b>@Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })</b>
                                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-14">
                                    <input type="submit" value="Registrar" class="btn btn-primary btn-block" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



