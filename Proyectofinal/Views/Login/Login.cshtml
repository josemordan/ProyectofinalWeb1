@model Proyectofinal.Models.LoginModel

@{ ViewBag.Title = "Login";
                Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<center>

    @if (ViewData["ERROR"] != null)
    {
        <div class="alert alert-danger">
            @ViewData["ERROR"]
        </div>
    }
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <div class="card" style="border:0px">
                <div class="card-header bg-dark text-white text-center">
                    <h5>Iniciar Sesión</h5>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <img style="width:150px; height:140px; margin-bottom:10px" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT-adgmVT8ehLnb1kS3_OC3sy8ejjWjvXChQvuTWeGZI1HBaBeWhVtDKdJLev5duMoambU&usqp=CAU" />
                            <br/>  
                            <b> @Html.LabelFor(model => model.Usuario) </b>
                            @Html.TextBoxFor(model => model.Usuario, "", new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <b>@Html.Label("Contraseña")</b>
                            @Html.TextBoxFor(model => model.Clave, "", new { @class = "form-control", type = "Password" })
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-primary btn-block" value="Entrar" />
                        </div>
                        }
                </div>
            </div>
            
        </div>
    </div>
</center>